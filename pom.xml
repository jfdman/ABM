<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>org.sandag</groupId>
    <artifactId>SANDAG-ABM</artifactId>
    <version>13.2.0-SNAPSHOT</version>
    <name>SANDAG CT-RAMP Activity Based Model</name>

    <profiles>
        <profile>
            <id>local-cluster</id>
            <properties>
                <jppf.server.host>127.0.0.1</jppf.server.host>
                <map.folder>e$</map.folder>
                <jppf.management.host>127.0.0.1</jppf.management.host>
                <matrix.server.host>127.0.0.1</matrix.server.host>
                <matrix.server.port>1191</matrix.server.port>
                <household.server.host>127.0.0.1</household.server.host>
                <household.server.port>1129</household.server.port>
                <master.node.ip>127.0.0.1</master.node.ip>
                <node.1.ip>127.0.0.1</node.1.ip>
                <node.2.ip>127.0.0.1</node.2.ip>
                <java.32.port>1190</java.32.port>
            </properties>
        </profile>
        <profile>
            <id>charger-cluster</id>
            <properties>
                <jppf.server.host>172.16.34.51</jppf.server.host>
                <map.folder>d$</map.folder>
                <jppf.management.host>172.16.34.51</jppf.management.host>
                <matrix.server.host>172.16.34.51</matrix.server.host>
                <matrix.server.port>1191</matrix.server.port>
                <household.server.host>172.16.34.50</household.server.host>
                <household.server.port>1129</household.server.port>
                <master.node.ip>172.16.34.51</master.node.ip>
                <node.1.ip>172.16.34.50</node.1.ip>
                <node.2.ip>172.16.34.52</node.2.ip>
                <java.32.port>1190</java.32.port>
            </properties>
        </profile>
        <profile>
            <id>mustang-cluster</id>
            <properties>
                <jppf.server.host>172.16.34.40</jppf.server.host>
                <map.folder>d$</map.folder>
                <jppf.management.host>172.16.34.40</jppf.management.host>
                <matrix.server.host>172.16.34.40</matrix.server.host>
                <matrix.server.port>1191</matrix.server.port>
                <household.server.host>172.16.34.42</household.server.host>
                <household.server.port>1129</household.server.port>
                <master.node.ip>172.16.34.40</master.node.ip>
                <node.1.ip>172.16.34.41</node.1.ip>
                <node.2.ip>172.16.34.42</node.2.ip>
                <java.32.port>1190</java.32.port>
            </properties>
        </profile>
        <profile>
            <id>sdsc-cluster</id>
            <properties>
                <jppf.server.host></jppf.server.host>
                <jppf.management.host></jppf.management.host>
                <matrix.server.host></matrix.server.host>
                <matrix.server.port></matrix.server.port>
                <household.server.host></household.server.host>
                <household.server.port></household.server.port>
                <master.node.ip></master.node.ip>
                <node.1.ip></node.1.ip>
                <node.2.ip></node.2.ip>
                <java.32.port></java.32.port>
            </properties>
        </profile>
        <profile>
            <id>jenkins</id>
            <activation>
                <property>
                    <name>env.BUILD_NUMBER</name>
                </property>
            </activation>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.codehaus.mojo</groupId>
                        <artifactId>cobertura-maven-plugin</artifactId>
                        <version>2.5.1</version>
                        <configuration>
                            <formats>
                                <format>xml</format>
                            </formats>
                        </configuration>
                        <executions>
                            <execution>
                                <phase>package</phase>
                                <goals>
                                    <goal>cobertura</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    </properties>

    <reporting>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-checkstyle-plugin</artifactId>
                <version>2.10</version>
                <configuration>
                    <failsOnError>false</failsOnError>
                    <configLocation>sun_checks.xml</configLocation>
                </configuration>
            </plugin>
        </plugins>
    </reporting>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <version>2.16</version>
                <configuration>
                    <argLine>-XX:-UseSplitVerifier</argLine>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.0</version>
                <configuration>
                    <source>1.7</source>
                    <target>1.7</target>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <version>2.8</version>
                <executions>
                    <execution>
                        <id>copy-dependencies</id>
                        <phase>package</phase>
                        <goals>
                            <goal>copy-dependencies</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${project.build.directory}/${project.name}/${project.version}/lib</outputDirectory>
                            <overWriteReleases>false</overWriteReleases>
                            <overWriteSnapshots>false</overWriteSnapshots>
                            <overWriteIfNewer>true</overWriteIfNewer>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <artifactId>maven-resources-plugin</artifactId>
                <version>2.6</version>
                <executions>
                    <execution>
                        <id>copy-uec-resources</id>
                        <phase>package</phase>
                        <goals>
                            <goal>copy-resources</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${project.build.directory}/${project.name}/${project.version}/uec</outputDirectory>
                            <resources>
                                <resource>
                                    <directory>UECs</directory>
                                    <filtering>false</filtering>
                                </resource>
                            </resources>
                        </configuration>
                    </execution>
                    <execution>
                        <id>copy-gisdk-resources</id>
                        <phase>package</phase>
                        <goals>
                            <goal>copy-resources</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${project.build.directory}/${project.name}/${project.version}/gisdk</outputDirectory>
                            <resources>
                                <resource>
                                    <directory>src/main/gisdk</directory>
                                    <filtering>true</filtering>
                                </resource>
                            </resources>
                        </configuration>
                    </execution>
                    <execution>
                        <id>copy-conf-resources</id>
                        <phase>package</phase>
                        <goals>
                            <goal>copy-resources</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${project.build.directory}/${project.name}/${project.version}/conf</outputDirectory>
                            <resources>
                                <resource>
                                    <directory>src/main/resources</directory>
                                    <filtering>true</filtering>
                                    <includes>
                                        <include>**/*.properties</include>
                                        <include>*.xml</include>
                                    </includes>
                                </resource>
                            </resources>
                        </configuration>
                    </execution>
                    <execution>
                        <id>copy-bin-resources</id>
                        <phase>package</phase>
                        <goals>
                            <goal>copy-resources</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${project.build.directory}/${project.name}/${project.version}/bin</outputDirectory>
                            <resources>
                                <resource>
                                    <directory>src/main/resources</directory>
                                    <filtering>true</filtering>
                                    <includes>
                                        <include>**/*.bat</include>
                                        <include>*.cmd</include>
                                        <include>*.exe</include>
                                    </includes>
                                </resource>
                            </resources>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <version>2.4</version>
                <configuration>
                    <finalName>sandag_abm</finalName>
                    <excludes>
                        <exclude>**/*.bat</exclude>
                        <exclude>**/*.cmd</exclude>
                        <exclude>**/*.properties</exclude>
                        <exclude>*.xml</exclude>
                    </excludes>
                    <outputDirectory>${project.build.directory}/${project.name}/${project.version}/lib</outputDirectory>
                    <archive>
                        <manifest>
                            <addClasspath>true</addClasspath>
                            <classpathPrefix>./</classpathPrefix>
                            <mainClass>org.sandag.abm.application.SandagTourBasedModel</mainClass>
                            <addDefaultSpecificationEntries>true</addDefaultSpecificationEntries>
                        </manifest>
                        <manifestEntries>
                            <Built-By>San Diego Association of Governments</Built-By>
                            <Class-Path>../conf</Class-Path>
                        </manifestEntries>
                    </archive>
                </configuration>
            </plugin>
        </plugins>
        <pluginManagement>
            <plugins>
                <plugin>
                    <groupId>org.eclipse.m2e</groupId>
                    <artifactId>lifecycle-mapping</artifactId>
                    <version>1.0.0</version>
                    <configuration>
                        <lifecycleMappingMetadata>
                            <pluginExecutions>
                                <pluginExecution>
                                    <pluginExecutionFilter>
                                        <groupId>org.apache.maven.plugins</groupId>
                                        <artifactId>maven-dependency-plugin</artifactId>
                                        <versionRange>[1.0.0,)</versionRange>
                                        <goals>
                                            <goal>copy-dependencies</goal>
                                        </goals>
                                    </pluginExecutionFilter>
                                    <action>
                                        <ignore />
                                    </action>
                                </pluginExecution>
                            </pluginExecutions>
                        </lifecycleMappingMetadata>
                    </configuration>
                </plugin>
            </plugins>
        </pluginManagement>
    </build>
    <dependencies>
        <dependency>
            <groupId>pb</groupId>
            <artifactId>common-base</artifactId>
            <version>2013.08.08-ABM</version>
        </dependency>
        <dependency>
            <groupId>pb</groupId>
            <artifactId>sawdust</artifactId>
            <version>unknown</version>
        </dependency>
        <dependency>
            <groupId>org.jppf</groupId>
            <artifactId>jppf-client</artifactId>
            <version>2.5</version>
        </dependency>
        <dependency>
            <groupId>org.jppf</groupId>
            <artifactId>jppf-server</artifactId>
            <version>2.5</version>
        </dependency>
        <dependency>
            <groupId>ca.umontreal.iro</groupId>
            <artifactId>ssj</artifactId>
            <version>2.5</version>
            <exclusions>
                <exclusion>
                    <artifactId>icu4j</artifactId>
                    <groupId>com.ibm.icu</groupId>
                </exclusion>
            </exclusions>
        </dependency>
        <dependency>
            <groupId>commons-lang</groupId>
            <artifactId>commons-lang</artifactId>
            <version>2.4</version>
        </dependency>
    </dependencies>

    <distributionManagement>
        <snapshotRepository>
            <id>nexus-snapshots</id>
            <name>Snapshots</name>
            <url>http://svn.sandag.org:8081/nexus/content/repositories/snapshots</url>
            <uniqueVersion>false</uniqueVersion>
        </snapshotRepository>
        <repository>
            <id>nexus-release</id>
            <name>Releases</name>
            <url>http://svn.sandag.org:8081/nexus/content/repositories/releases/</url>
        </repository>
    </distributionManagement>

    <repositories>
        <repository>
            <id>nexus-sandag-public</id>
            <name>Sandag Nexus</name>
            <url>http://svn.sandag.org:8081/nexus/content/groups/public/</url>
        </repository>
    </repositories>
</project>
